generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  telegramUsername String @unique
  uid      String @unique
  referrals Referral[]
  tasks    Task[]
}

model Referral {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [id], references: [id])
  referredBy String
  reward    Int
}

model Task {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [id], references: [id])
  taskId    String
  taskName  String
  completed Boolean  @default(false)
  reward    Int
}
