generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PINK_PRISMA_URL") 
  directUrl = env("PINK_URL_NON_POOLING")
}

model User {
  id          Int      @id @default(autoincrement()) // Primary Key
  telegramId  String   @unique // Unique Telegram user ID
  username    String?  // Optional username from Telegram
  firstName   String?  // Optional first name from Telegram
  coins       Int      @default(0) // User's total coins earned
  referrals   Int      @default(0) // Referral count (if needed)
}

model GameHistory {
  id        Int      @id @default(autoincrement()) // Primary Key
  userId    Int      @relation(fields: [userId], references: [id])
  action    String   // Description of game action (like "sold diamonds", "completed task")
  createdAt DateTime @default(now()) // Timestamp of action
}
