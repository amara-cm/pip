generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("PINK_PRISMA_URL") // uses connection pooling
  directUrl = env("PINK_URL_NON_POOLING") // uses a direct connection
}

model User {
  id               String     @id @default(cuid())
  telegramUsername String      @unique
  uid              String      @unique
  referrals        Referral[]
  tasks            Task[]
}

model Referral {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id]) // Updated to refer to userId
  referredBy String
  reward    Int
}

model Task {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id]) // Updated to refer to userId
  taskId    String
  taskName  String
  completed Boolean  @default(false)
  reward    Int
}
