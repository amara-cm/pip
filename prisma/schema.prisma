generator client {
  provider = "prisma-client-js"
}

model User {
  id               String     @id @default(cuid())
  telegramUsername String      @unique
  uid              String      @unique
  referrals        Referral[]
  tasks            Task[]
}

model Referral {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id]) // Updated to refer to userId
  referredBy String
  reward    Int
}

model Task {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id]) // Updated to refer to userId
  taskId    String
  taskName  String
  completed Boolean  @default(false)
  reward    Int
}

model device_logs {
    id          Int      @id @default(autoincrement())
    user_agent  String
    access_time DateTime @default(now())
}

model desktop_access_logs {
    id          Int      @id @default(autoincrement())
    user_agent  String
    access_time DateTime @default(now())
}
